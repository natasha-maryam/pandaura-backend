{
  "name": "pandora-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon dist/index.js\"",
    "vercel-build": "npx tsc",
    "migrate": "npx knex migrate:latest",
    "migrate:rollback": "npx knex migrate:rollback",
    "migrate:make": "npx knex migrate:make",
    "migrate:status": "npx knex migrate:status",
    "migrate:prod": "cross-env NODE_ENV=production npx knex migrate:latest",
    "migrate:railway": "npm run build && cross-env NODE_ENV=production node migrate-railway.js",
    "migrate:direct": "cross-env NODE_ENV=production node migrate-direct.js",
    "db:reset": "npm run build && cross-env NODE_ENV=production node reset-database.js",
    "db:reset-and-migrate": "npm run db:reset && npm run migrate:railway",
    "db:seed": "npx knex seed:run",
    "db:clear": "node clear-database.js clear",
    "db:counts": "node clear-database.js counts",
    "db:clear-ts": "npx ts-node src/utils/clearDatabase.ts clear",
    "db:add-test-invites": "node add-test-invites.js add",
    "db:show-invites": "node add-test-invites.js show",
    "db:check": "node scripts/check-db.js",
    "db:health": "npx ts-node -e \"import('./src/db/database-manager').then(({DatabaseManager}) => DatabaseManager.healthCheck().then(console.log))\"",
    "db:test": "npx ts-node -e \"import('./src/db/database-manager').then(({DatabaseManager}) => DatabaseManager.testConnection())\"",
    "db:info": "npx ts-node -e \"import('./src/db/database-manager').then(({DatabaseManager}) => DatabaseManager.getConnectionInfo().then(console.log))\"",
    "preinstall": "apt-get update && apt-get install -y python3 make g++"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jazykhan3/pandora-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jazykhan3/pandora-backend/issues"
  },
  "homepage": "https://github.com/jazykhan3/pandora-backend#readme",
  "dependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/knex": "^0.15.2",
    "@types/multer": "^2.0.0",
    "@types/ws": "^8.18.1",
    "@vercel/postgres": "^0.10.0",
    "argon2": "^0.31.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "fast-csv": "^5.0.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.18.3",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "@types/xml2js": "^0.4.14",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
